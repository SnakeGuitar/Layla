<Page x:Class="Layla.Desktop.Views.ProjectListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Layla.Desktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      ShowsNavigationUI="False"
      Title="ProjectListView"
      Loaded="Page_Loaded"
      Background="{DynamicResource WindowBackground}"
      Foreground="{DynamicResource PrimaryText}">

    <Grid Background="{DynamicResource WindowBackground}" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="My Projects" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="➕ Create Project" Background="{DynamicResource AccentColor}" Foreground="White" BorderThickness="0" 
                            Padding="10,5" Margin="0,0,15,0" Cursor="Hand" Click="OpenCreateProject_Click"/>
                    <Button Content="⚙ Settings" Background="Transparent" Foreground="{DynamicResource SecondaryText}" BorderThickness="0" 
                            Padding="10,5" Margin="0,0,10,0" Cursor="Hand" Click="SettingsButton_Click"/>
                    <Button Content="🚪 Logout" Background="Transparent" Foreground="IndianRed" BorderThickness="0" 
                            Padding="10,5" Cursor="Hand" Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
            
            <ListView x:Name="ProjectsListView" Grid.Row="1" ItemsSource="{Binding}" BorderThickness="0" Background="Transparent" MouseDoubleClick="ProjectsListView_MouseDoubleClick">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5,5,5,10" Background="{DynamicResource ControlBackground}" Cursor="Hand">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource PrimaryText}"/>
                                <TextBlock Text="{Binding LiteraryGenre}" FontStyle="Italic" Foreground="{DynamicResource SecondaryText}" Margin="0,2,0,5" />
                                <TextBlock Text="{Binding Synopsis}" TextWrapping="Wrap" MaxWidth="600" Foreground="{DynamicResource PrimaryText}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Border x:Name="CreateProjectModal" Visibility="Collapsed" Background="#CC000000" Panel.ZIndex="100">
            <Border Background="{DynamicResource WindowBackground}" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Create New Project" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="{DynamicResource PrimaryText}"/>
                    
                    <TextBlock Text="Title" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryText}"/>
                    <TextBox x:Name="NewProjectTitle" Margin="0,0,0,10" Padding="5"/>
                    
                    <TextBlock Text="Genre" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryText}"/>
                    <TextBox x:Name="NewProjectGenre" Margin="0,0,0,10" Padding="5"/>
                    
                    <TextBlock Text="Synopsis" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryText}"/>
                    <TextBox x:Name="NewProjectSynopsis" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,20" Padding="5"/>
                    
                    <TextBlock x:Name="CreateProjectError" Foreground="IndianRed" Visibility="Collapsed" Margin="0,0,0,10" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Background="Transparent" BorderThickness="0" Foreground="Gray" Margin="0,0,10,0" Padding="15,5" Cursor="Hand" Click="CancelCreateProject_Click"/>
                        <Button x:Name="SaveProjectButton" Content="Create" Background="{DynamicResource AccentColor}" Foreground="White" BorderThickness="0" Padding="15,5" Cursor="Hand" Click="SaveProject_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>
