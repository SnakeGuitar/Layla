<Page x:Class="Layla.Desktop.Views.EditorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="EditorView"
      Loaded="Page_Loaded"
      Background="Transparent"
      Foreground="{DynamicResource PrimaryText}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MinWidth="150" MaxWidth="300"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource SidebarBackground}" 
                BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Manuscripts" FontWeight="SemiBold" FontSize="14" 
                           Margin="10,10,10,5" Foreground="{DynamicResource AccentColor}"/>

                <ListView x:Name="ManuscriptsListView" Grid.Row="1" Background="Transparent" BorderThickness="0" 
                          Foreground="{DynamicResource PrimaryText}" SelectionChanged="ManuscriptsListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" Padding="5,2" Cursor="Hand"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Stretch" 
                      Background="{DynamicResource BorderColor}" Cursor="SizeWE"/>

        <Grid Grid.Column="2" Background="{DynamicResource ControlBackground}">
            <RichTextBox x:Name="EditorRichTextBox" Background="Transparent" BorderThickness="0" 
                         Foreground="{DynamicResource PrimaryText}"
                         Padding="40,20" FontSize="16" FontFamily="Segoe UI"
                         AcceptsReturn="True" SpellCheck.IsEnabled="True">
                <FlowDocument>
                    <Paragraph>
                        <Run x:Name="EditorWelcomeText" Text="Select a manuscript to start writing..."/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Grid>
    </Grid>
</Page>