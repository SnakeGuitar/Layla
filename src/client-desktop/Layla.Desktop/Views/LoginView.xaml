<Page x:Class="Layla.Desktop.Views.LoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Sign In"
      Background="{DynamicResource WindowBackground}"
      Foreground="{DynamicResource PrimaryText}">

    <Grid>
        <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Layla" FontSize="32" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="{DynamicResource AccentColor}" Margin="0,0,0,10"/>
            <TextBlock Text="Sign in to your workspace" FontSize="14" 
                       HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryText}" Margin="0,0,0,30"/>

            <TextBlock Text="EMAIL" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource SecondaryText}" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Padding="10" Background="{DynamicResource ControlBackground}" 
                     Foreground="{DynamicResource PrimaryText}" BorderBrush="{DynamicResource BorderColor}" Margin="0,0,0,15"/>

            <TextBlock Text="PASSWORD" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource SecondaryText}" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Padding="10" Background="{DynamicResource ControlBackground}" 
                         Foreground="{DynamicResource PrimaryText}" BorderBrush="{DynamicResource BorderColor}" Margin="0,0,0,25"/>

            <TextBlock x:Name="ErrorText" Foreground="IndianRed" Visibility="Collapsed" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Button x:Name="LoginButton" Content="Continue →" Padding="10" 
                    Background="{DynamicResource AccentColor}" Foreground="White" 
                    BorderThickness="0" Cursor="Hand" Click="LoginButton_Click"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="No account? " Foreground="{DynamicResource SecondaryText}"/>
                <TextBlock Text="Create one" Foreground="{DynamicResource AccentColor}" 
                           Cursor="Hand" MouseLeftButtonDown="NavigateToSignUp_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>