<Page x:Class="Layla.Desktop.Views.WorkspaceView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Layla.Desktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      ShowsNavigationUI="False"
      Title="Workspace"
      Background="{DynamicResource WindowBackground}"
      Foreground="{DynamicResource PrimaryText}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="200" MaxWidth="400"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource SidebarBackground}" 
                BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="ProjectTitleText" Grid.Row="0" Text="Project Title" FontWeight="Bold" FontSize="16" 
                           VerticalAlignment="Center" Margin="15,0" TextTrimming="CharacterEllipsis"
                           Foreground="{DynamicResource AccentColor}"/>

                <StackPanel Grid.Row="1" Margin="5">
                    <Button Content="â† Back to Projects" Background="Transparent" BorderThickness="0" 
                            HorizontalAlignment="Left" Padding="10,5"
                            Foreground="{DynamicResource SecondaryText}" Cursor="Hand"
                            Click="BackToProjects_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Vertical" VerticalAlignment="Center" Margin="15,0">
                    <Button Content="âš™ Settings" Background="Transparent" BorderThickness="0" 
                            HorizontalAlignment="Left" Padding="0,5"
                            Foreground="{DynamicResource SecondaryText}" Cursor="Hand"
                            Click="SettingsButton_Click"/>
                    
                    <Button Content="ðŸšª Logout" Background="Transparent" BorderThickness="0" 
                            HorizontalAlignment="Left" Padding="0,5" Margin="0,5,0,0"
                            Foreground="IndianRed" Cursor="Hand"
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Stretch" 
                      Background="{DynamicResource BorderColor}" Cursor="SizeWE"/>

        <Grid Grid.Column="2" Background="{DynamicResource ControlBackground}">
            <TabControl Background="Transparent" BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Margin" Value="0,0,5,0"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Manuscript Editor">
                    <Frame x:Name="EditorFrame" NavigationUIVisibility="Hidden"/>
                </TabItem>

                <TabItem Header="Wiki">
                    <Grid>
                        <TextBlock Text="Wiki Content Here..." Foreground="{DynamicResource PrimaryText}" Margin="20"/>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Graph">
                    <Frame Source="NarrativeGraphView.xaml" NavigationUIVisibility="Hidden"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Page>
