<Page x:Class="Layla.Desktop.Views.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Layla.Desktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="Main Workspace"
      Background="{DynamicResource WindowBackground}"
      Foreground="{DynamicResource PrimaryText}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="200" MaxWidth="400"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource SidebarBackground}" 
                BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="My Workspace" FontWeight="Bold" FontSize="14" 
                           VerticalAlignment="Center" Margin="15,0" 
                           Foreground="{DynamicResource AccentColor}"/>

                <TreeView Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="5">
                    <TreeViewItem Header="Prologue" Foreground="{DynamicResource PrimaryText}"/>
                    <TreeViewItem Header="Chapter 1" Foreground="{DynamicResource PrimaryText}"/>
                    <TreeViewItem Header="World Wiki" Foreground="{DynamicResource SecondaryText}"/>
                </TreeView>

                <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <Button Content="⚙ Settings" Background="Transparent" BorderThickness="0" 
                            Foreground="{DynamicResource SecondaryText}" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Stretch" 
                      Background="{DynamicResource BorderColor}" Cursor="SizeWE"/>

        <Grid Grid.Column="2" Background="{DynamicResource ControlBackground}">
            <TabControl Background="Transparent" BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Margin" Value="0,0,5,0"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Chapter 1">
                    <Grid>
                        <RichTextBox Background="Transparent" BorderThickness="0" 
                                     Foreground="{DynamicResource PrimaryText}"
                                     Padding="40,20" FontSize="16" FontFamily="Segoe UI"
                                     AcceptsReturn="True" SpellCheck.IsEnabled="True">
                            <FlowDocument>
                                <Paragraph>
                                    <Run Text="Start writing your manuscript here..."/>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </Grid>
                </TabItem>

                <TabItem Header="Character Map">
                    <Frame Source="/Views/GraphView.xaml" NavigationUIVisibility="Hidden"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Page>